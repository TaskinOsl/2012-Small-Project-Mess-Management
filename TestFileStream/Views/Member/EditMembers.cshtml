@model TestFileStream.Entity.Members

@{
    ViewBag.Title = "EditMembers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="panel panel-primary" style="margin: 0 auto; max-width: 700px; min-width: 300px">
    <div class="panel-heading">
        <h2>Edit Members</h2>
    </div>
    <div class="panel-body">
        <div id="full" style="max-width: 600px; min-width: 200px">


            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

                @Html.HiddenFor(model => model.Id)

                <div class="editor-label">
                    @Html.LabelFor(model => model.FName)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.FName)
                    @Html.ValidationMessageFor(model => model.FName)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.LName)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.LName)
                    @Html.ValidationMessageFor(model => model.LName)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.Address)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.Address)
                    @Html.ValidationMessageFor(model => model.Address)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.Contact)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.Contact)
                    @Html.ValidationMessageFor(model => model.Contact)
                </div>
                <br />
                <p>
                     <button class="btn btn-default"><a href="@Html.Action("ViewAllMembers")"> Back</a></button>
                    <input class="btn btn-primary" type="submit" value="Save" />
                   
                </p>
    
            }
            
            
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
