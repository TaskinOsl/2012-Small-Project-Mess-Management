@model TestFileStream.Entity.Bazar

@{
    ViewBag.Title = "AddBazarCost";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="panel panel-primary" style="margin: 0 auto; max-width: 700px; min-width: 300px">
    <div class="panel-heading">
        <h2>Add Bazar Cost</h2>
    </div>
    <div class="panel-body">

        <div id="left" style="float: left; width: 40%; min-width: 100px">
            @Html.Partial("~/Views/Bazar/PartialBazarMenu.cshtml")
        </div>

        <div id="right" style="float: right; width: 60%; min-width: 200px">

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

                <div class="editor-label">
                    @Html.LabelFor(model => model.CostDate)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.CostDate, new { id = "date" })
                    @Html.ValidationMessageFor(model => model.CostDate)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.Members)
                </div>
                <div class="editor-field">
                    @Html.DropDownList("Members", string.Empty)

                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.BazarAmmount)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.BazarAmmount)
                    @Html.ValidationMessageFor(model => model.BazarAmmount)
                </div>
                <br />
                <p>
                    <input class="btn btn-primary" type="submit" value="Create" />
                </p>
            }
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#date").datepicker({ dateFormat: 'dd/mm/yy' });
    });
</script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
