@model TestFileStream.Entity.Bazar

@{
    ViewBag.Title = "EditBazars";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style type="text/css">
    body {
        background-image: url('../../images/image.jpg');
        background-repeat: repeat-x;
        background-position: top;
        height: inherit;
        background-size: cover;
    }
</style>
<div id="full" style="width: 100%; height: 100%; padding: 0px 0px 0px 6%;">
    <h2 style="color: white">Edit Bazar list </h2>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)

        <div class="editor-label">
            @Html.LabelFor(model => model.CostDate)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CostDate)
            @Html.ValidationMessageFor(model => model.CostDate)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.BazarAmmount)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.BazarAmmount)
            @Html.ValidationMessageFor(model => model.BazarAmmount)
        </div>
        <br />
        <p>
            <input class="btn btn-primary" type="submit" value="Save" />
        </p>
    }

    <div>
        @Html.ActionLink("Back to BazarList", "ViewBazarList")
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</div>
