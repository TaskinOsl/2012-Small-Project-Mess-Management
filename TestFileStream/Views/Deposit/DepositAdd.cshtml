@model TestFileStream.Entity.Deposit

@{
    ViewBag.Title = "DepositAdd";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="panel panel-primary" style="margin: 0 auto; max-width: 700px; min-width: 300px">
    <div class="panel-heading">
        <h2>Add Deposit</h2>
    </div>
    <div class="panel-body">
        <div id="left" style="float: left; width: 40%; min-width: 100px">
            @Html.Partial("~/Views/Deposit/PartialDepositMenu.cshtml")

        </div>
        <div id="right" style="float: right; width: 60%; min-width: 200px">

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

                <div class="editor-label">
                    @Html.LabelFor(model => model.DepositDate)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.DepositDate, new { id = "date" ,@class="form-control"})
                    @Html.ValidationMessageFor(model => model.DepositDate)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.Members)
                </div>
                <div class="editor-field">
                    @Html.DropDownList("Members", "Select From Members")
                    @Html.ValidationMessageFor(model => model.Members)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.DepositAmmount)
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.DepositAmmount,new{@class="form-control"})
                    @Html.ValidationMessageFor(model => model.DepositAmmount)
                </div>
                <br />
                <p>
                    <input class="btn btn-primary" type="submit" value="Add Deposit" />
                </p>

            }
            <script type="text/javascript">
                $(document).ready(function () {
                    $("#date").datepicker({ dateFormat: 'dd/mm/yy' });
                });
            </script>
            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
            }
        </div>
    </div>
</div>


