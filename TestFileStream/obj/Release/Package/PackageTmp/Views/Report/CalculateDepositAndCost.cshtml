@{
    ViewBag.Title = "CalculateDepositAndCost";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="color: white">Calculate Deposit And Cost</h2>
<div id="left" style="float:left ; width : 20% ;padding: 7% 0px 0px 2% ">
    @using (Html.BeginForm("CalculateDepositAndCost", "Report"))
    {
        <p>
            @Html.Label("From Date", new { style = "color: white" })
            <input style="color: black" type="date" id="Fdate" name="Fdate" />
            @Html.Label("To Date", new { style = "color: white" })
            <input style="color: black" type="date" id="Tdate" name="Tdate" />
            <br />
            <input class="ui-icon-search" type="submit" value="Search" />
        </p>      
    }
</div>
<div id="right" style="float:right ;width: 80%; padding: 5% 0px 0px 6% ">
@if(ViewBag.DEPOSIT !=null )
{
    <table class="table table-bordered" style="float: right">
    <tr>
        <th>Total Deposit</th>
        <th>Total Bazar Cost</th>
        <th>Total Meal</th>
        <th>Meal Rate</th>
        <th>Remaining Balance</th>
    </tr>
    <tr>
        <td>@ViewBag.DEPOSIT</td>
        <td>@ViewBag.TOTALBAZARCOST</td>
        <td>@ViewBag.TOTALMEAL</td>
        <td>@ViewBag.MEALRATE</td>
        <td>@ViewBag.REMAINBALANCE</td>
    </tr>
</table>    
}
</div>